<!-- app/views/todos/_todo.html.erb -->
<div id="<%= dom_id(todo) %>" class="bg-white shadow-md rounded px-6 pt-5 pb-6 mb-4 flex flex-col md:flex-row md:items-center md:justify-between <%= 'opacity-50 bg-gray-100' if todo.completed? %> transition duration-300 ease-in-out transform hover:scale-105">
  <div class="mb-4 md:mb-0">
    <h2 class="<%= 'line-through text-gray-500' if todo.completed? %> text-lg md:text-xl font-semibold text-gray-800"><%= todo.title %></h2>
    <p class="text-sm md:text-base text-gray-600">
      <span class="font-bold">Completed:</span>
      <span class="<%= todo.completed? ? 'text-green-500' : 'text-red-500' %>">
        <%= todo.completed? ? 'Yes' : 'No' %>
      </span>
    </p>
  </div>

  <div class="flex space-x-2">
    <%= link_to "Show", todo, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out" %>
    <%= link_to "Edit", edit_todo_path(todo), class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out" %>
    <%= button_to "Delete", todo, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out" %>
  </div>
</div>
