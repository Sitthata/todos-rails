<!-- app/views/todos/_form.html.erb -->
<%= form_with(model: todo, local: true, class: "bg-white p-6 rounded shadow-md") do |form| %>
  <% if todo.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 text-red-700 border border-red-400 rounded">
      <h2 class="text-lg font-semibold"><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul class="list-disc list-inside mt-2">
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, "Title", class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_area :title, class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300", rows: 3 %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
